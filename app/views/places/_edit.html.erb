<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="editModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h2 class="modal-title" id="editModal">Edit Your Place</h2>
      </div>
      <%= simple_form_for @place do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.input :name %>
        </div>
        <div class="form-group">
          <%= f.input :address %>
        </div>
        <div class="form-group">
          <%= f.input :description %>
        </div>
      </div>
      <div class="modal-footer ">
        <%= button_tag(type: 'submit', class: "btn btn-warning btn-lg", style: "width: 100%;") do %>
         <span class="glyphicon glyphicon-ok-sign"></span> Update
        <% end %>
      </div>
      <% end %>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>