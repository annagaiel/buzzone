<!-- Modal -->
<div class="modal fade" id="myPhotoModal" tabindex="-1" role="dialog" aria-labelledby="photoModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="modal-title" id="myModalLabel">Add a Comment</h2>
      </div>
      <%= simple_form_for @photo, :url => place_photos_path(@place) do |f| %>
      <div class="modal-body">
         <%= f.input :caption %>
         <%= f.input :picture %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Add a Photo", :class => 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="clear"></div>

<h2>Photos</h2>
<% @place.photos.each do |photo| %>
<br />
<div class="row">
    <div class="col-md-3">  
        <div class="img-thumbnail">
          <% if photo.picture.present? %>
            <%= image_tag photo.picture, :class => "img-responsive", :alt => "" %>  
          <% end %>
          <div class="caption-label">
            <% if photo.caption.present? %>
              <p class="text-center"><%= photo.caption %></p>
            <% end %>
          </div>
        </div>  
    </div>
  </div>
<% end %>